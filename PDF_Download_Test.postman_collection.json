{
  "info": {
    "name": "PDF Download System Test - Direct API",
    "description": "Test via direct API routes through /api/index.php (no proxy)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://demo.yeshomework.com",
      "description": "Base URL for the API"
    },
    {
      "key": "test_token",
      "value": "dl_9be64f218a16c62bc90f8c4a3cc99ea4",
      "description": "Test download token"
    },
    {
      "key": "jwt_token",
      "value": "",
      "description": "JWT authentication token - get from login"
    },
    {
      "key": "child_id",
      "value": "1",
      "description": "Child ID for token creation"
    }
  ],
  "item": [
    {
      "name": "1. API Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/health",
          "host": ["{{base_url}}"],
          "path": ["api", "health"]
        },
        "description": "Check if the main API is responding"
      },
      "response": []
    },
    {
      "name": "2. Create Download Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"child_id\": {{child_id}},\n  \"date\": \"2025-06-29\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/download-tokens/create",
          "host": ["{{base_url}}"],
          "path": ["api", "download-tokens", "create"]
        },
        "description": "Create a new download token and get the link (requires auth)"
      },
      "response": []
    },
    {
      "name": "3. Get Token Info (Direct API)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/download-tokens/{{test_token}}",
          "host": ["{{base_url}}"],
          "path": ["api", "download-tokens", "{{test_token}}"]
        },
        "description": "Get download token info via main API route"
      },
      "response": []
    },
    {
      "name": "4. Submit Feedback (Direct API)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"{{test_token}}\",\n  \"completion\": \"first_time\",\n  \"math_difficulty\": \"just_right\",\n  \"other_difficulty\": \"just_right\",\n  \"comments\": \"Testing via Direct API\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/feedback",
          "host": ["{{base_url}}"],
          "path": ["api", "feedback"]
        },
        "description": "Submit feedback via main API route"
      },
      "response": []
    },
    {
      "name": "5. Test PDF Debug Route",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/debug/pdf/{{test_token}}",
          "host": ["{{base_url}}"],
          "path": ["api", "debug", "pdf", "{{test_token}}"]
        },
        "description": "Test PDF generation components (debug route) - MAIN TEST"
      },
      "response": []
    },
    {
      "name": "6. Generate Worksheet from Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{}"
        },
        "url": {
          "raw": "{{base_url}}/api/download-tokens/{{test_token}}/generate",
          "host": ["{{base_url}}"],
          "path": ["api", "download-tokens", "{{test_token}}", "generate"]
        },
        "description": "Generate worksheet from download token"
      },
      "response": []
    },
    {
      "name": "7. Direct PDF Download (DownloadAPI)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/DownloadAPI.php?token={{test_token}}",
          "host": ["{{base_url}}"],
          "path": ["api", "DownloadAPI.php"],
          "query": [
            {
              "key": "token",
              "value": "{{test_token}}"
            }
          ]
        },
        "description": "Direct PDF download (separate API file) - ACTUAL PDF DOWNLOAD"
      },
      "response": []
    }
  ]
} 