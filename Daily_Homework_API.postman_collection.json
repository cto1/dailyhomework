{
  "info": {
    "name": "Daily Homework API",
    "description": "API collection for testing Daily Homework application endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost/api",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "child_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "worksheet_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/signup",
              "host": ["{{base_url}}"],
              "path": ["auth", "signup"]
            }
          },
          "response": []
        },
        {
          "name": "Request Login (Magic Link)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Verify Login Token",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/verify?email=test@example.com&token=your_token_here",
              "host": ["{{base_url}}"],
              "path": ["auth", "verify"],
              "query": [
                {
                  "key": "email",
                  "value": "test@example.com"
                },
                {
                  "key": "token",
                  "value": "your_token_here"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Generate JWT Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.status === 'success') {",
                  "        pm.collectionVariables.set('jwt_token', response.token);",
                  "        pm.collectionVariables.set('user_id', response.user.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": 1,\n  \"email\": \"test@example.com\",\n  \"plan\": \"free\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/token",
              "host": ["{{base_url}}"],
              "path": ["auth", "token"]
            }
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{base_url}}/auth/refresh-token",
              "host": ["{{base_url}}"],
              "path": ["auth", "refresh-token"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/profile",
              "host": ["{{base_url}}"],
              "path": ["users", "profile"]
            }
          },
          "response": []
        },
        {
          "name": "Update User Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newemail@example.com\",\n  \"plan\": \"premium\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/profile",
              "host": ["{{base_url}}"],
              "path": ["users", "profile"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Children Management",
      "item": [
        {
          "name": "Get All Children",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/children",
              "host": ["{{base_url}}"],
              "path": ["children"]
            }
          },
          "response": []
        },
        {
          "name": "Add Child",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.status === 'success') {",
                  "        pm.collectionVariables.set('child_id', response.child_id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Emma\",\n  \"age_group\": \"Year 3\",\n  \"interest1\": \"Mathematics\",\n  \"interest2\": \"Science\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/children",
              "host": ["{{base_url}}"],
              "path": ["children"]
            }
          },
          "response": []
        },
        {
          "name": "Update Child",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Emma Updated\",\n  \"age_group\": \"Year 4\",\n  \"interest1\": \"Mathematics\",\n  \"interest2\": \"Art\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/children/{{child_id}}",
              "host": ["{{base_url}}"],
              "path": ["children", "{{child_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Child",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/children/{{child_id}}",
              "host": ["{{base_url}}"],
              "path": ["children", "{{child_id}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Worksheets Management",
      "item": [
        {
          "name": "Get All Worksheets",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/worksheets?limit=20",
              "host": ["{{base_url}}"],
              "path": ["worksheets"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Worksheets for Child",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/children/{{child_id}}/worksheets?limit=10",
              "host": ["{{base_url}}"],
              "path": ["children", "{{child_id}}", "worksheets"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Worksheet",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.status === 'success') {",
                  "        pm.collectionVariables.set('worksheet_id', response.worksheet_id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"child_id\": {{child_id}},\n  \"date\": \"2025-01-20\",\n  \"content\": \"# Daily Homework - Year 3\\n\\n## Mathematics\\n1. 25 + 17 = ?\\n2. 42 - 18 = ?\\n3. Count by 5s from 10 to 50\\n\\n## English\\n1. Write 3 sentences using these words: happy, garden, butterfly\\n2. Read the story 'The Magic Tree' and answer:\\n   - Who was the main character?\\n   - What happened at the end?\\n\\n## Science\\n1. Name 3 things that are living in your garden\\n2. Draw and label a simple plant\\n\\n## Creative\\nDraw your favorite animal and write 2 sentences about why you like it.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/worksheets",
              "host": ["{{base_url}}"],
              "path": ["worksheets"]
            }
          },
          "response": []
        },
        {
          "name": "Get Specific Worksheet",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/worksheets/{{worksheet_id}}",
              "host": ["{{base_url}}"],
              "path": ["worksheets", "{{worksheet_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "Update Worksheet",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"# Updated Daily Homework - Year 3\\n\\n## Mathematics (Updated)\\n1. 30 + 25 = ?\\n2. 50 - 23 = ?\\n3. Count by 10s from 20 to 100\\n\\n## English\\n1. Write 4 sentences using these words: excited, playground, friends\\n2. Read the story 'The Magic Tree' and answer:\\n   - Who was the main character?\\n   - What happened at the end?\\n   - What was your favorite part?\\n\\n## Science\\n1. Name 5 things that are living in your garden\\n2. Draw and label a plant with roots, stem, and leaves\\n\\n## Creative\\nDraw your favorite animal and write 3 sentences about why you like it.\",\n  \"downloaded\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/worksheets/{{worksheet_id}}",
              "host": ["{{base_url}}"],
              "path": ["worksheets", "{{worksheet_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "Mark Worksheet as Downloaded",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/worksheets/{{worksheet_id}}/download",
              "host": ["{{base_url}}"],
              "path": ["worksheets", "{{worksheet_id}}", "download"]
            }
          },
          "response": []
        },
        {
          "name": "Get Worksheet Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/stats/worksheets",
              "host": ["{{base_url}}"],
              "path": ["stats", "worksheets"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Worksheet",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/worksheets/{{worksheet_id}}",
              "host": ["{{base_url}}"],
              "path": ["worksheets", "{{worksheet_id}}"]
            }
          },
          "response": []
        }
      ]
    }
  ]
} 